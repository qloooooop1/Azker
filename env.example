# توكن البوت# توكن البوت (مطلوب)# إعدادات البوت# توكن البوت
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Bot Mode Configuration
# Set to 'true' to use webhook mode instead of polling (RECOMMENDED for production on Render.com)
# Webhook mode prevents 409 Conflict errors from Render's zero-downtime deployments
# Default: true (webhooks are more reliable and conflict-free)
USE_WEBHOOK=true

# Webhook settings (REQUIRED when USE_WEBHOOK=true)
# IMPORTANT for Render.com:
# 1. Set service type to "Web Service" (not Background Worker)
# 2. Use your Render service URL (e.g., https://your-service-name.onrender.com)
# Your public domain URL without trailing slash
# Leave empty and set in Render dashboard, or set to your actual service URL
WEBHOOK_URL=
# Webhook path (default: /webhook)
WEBHOOK_PATH=/webhook
# Optional: Secret token for webhook validation (recommended for security)
# Use a long random string, or leave empty to auto-generate
# This is sent by Telegram in the X-Telegram-Bot-Api-Secret-Token header
WEBHOOK_SECRET=

# إعدادات المطور
DEVELOPER_CHAT_ID=123456789
ADMIN_USERNAME=admin
ADMIN_PASSWORD=hashed_password_here
JWT_SECRET=your_jwt_secret_key

# إعدادات الخادم
# PORT is automatically set by Render.com - do not change in production
# For local development, you can use 3000 or any available port
PORT=3000
NODE_ENV=production

# قاعدة البيانات
# في بيئة الإنتاج: يتم استخدام /data/adkar.db تلقائياً عند تفعيل NODE_ENV=production
# في التطوير المحلي: يتم استخدام ./data/adkar.db
# يمكنك تجاوز المسار الافتراضي عن طريق تعيين DB_PATH
DB_PATH=./adkar.db
UPLOAD_PATH=./uploads

# إعدادات النشر الافتراضية
DEFAULT_MORNING_TIME=06:00
DEFAULT_EVENING_TIME=18:00
DEFAULT_INTERVAL_MINUTES=60

# إعدادات الجدولة
TIMEZONE=Asia/Riyadh
SCHEDULER_STARTUP_DELAY=5000